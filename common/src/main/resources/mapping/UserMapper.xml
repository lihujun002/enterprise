<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiger.framework.common.mapper.UserMapper">

	<resultMap id="userResult" type="org.tiger.framework.common.entity.User">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="title" property="title" />
		<result column="remark" property="remark" />
	</resultMap>


	<select id="findAll" resultMap="userResult">
		select * from t_user
	</select>

	<select id="findByUserName" resultMap="userResult"
		parameterType="string">
		select * from t_user where name = #{0}
	</select>
	
	<select id="findById" resultMap="userResult"
		parameterType="Integer">
		select * from t_user where id = #{0}
	</select>

	<update id="updateUser" parameterType="org.tiger.framework.common.entity.User">
		UPDATE t_user
		<set>
			<if test="name != null and name != ''">
				 name= #{name},
			</if>
			<if test="title != null and title != ''">
				 title= #{title},
			</if>
			<if test="remark != null and remark != ''">
				remark= #{remark},
			</if>
		</set>
		WHERE id = #{id}
	</update>
</mapper>